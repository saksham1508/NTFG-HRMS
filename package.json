{
  "name": "ntfg-hrms",
  "version": "1.0.0",
  "description": "AI-Powered Human Resource Management System",
  "main": "server/server.js",
  "scripts": {
    "dev": "concurrently \"npm run server:dev\" \"npm run client:dev\"",
    "start": "npm run server:start",
    "build": "npm run client:build",
    "server:dev": "cd server && npm run dev",
    "server:start": "cd server && npm start",
    "server:test": "cd server && npm test",
    "client:dev": "cd client && npm start",
    "client:build": "cd client && npm run build",
    "client:test": "cd client && npm test",
    "install:server": "cd server && npm install",
    "install:client": "cd client && npm install",
    "install:all": "npm run install:server && npm run install:client",
    "install-deps": "npm run install:all",
    "clean": "rimraf node_modules server/node_modules client/node_modules client/build",
    "heroku-postbuild": "npm run install:all && npm run client:build"
  },
  "keywords": [
    "HRMS",
    "AI",
    "React",
    "Node.js",
    "MongoDB"
  ],
  "author": "NextTechFusionGadgets",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2",
    "rimraf": "^5.0.1"
  },
  "dependencies": {
    "@mui/icons-material": "^7.2.0",
    "@mui/material": "^7.2.0",
    "framer-motion": "^12.23.11",
    "react-helmet-async": "^2.0.5",
    "react-hot-toast": "^2.5.2",
    "react-query": "^3.39.3"
  }
}
