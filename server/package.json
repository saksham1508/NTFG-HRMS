{
  "name": "ntfg-hrms-server",
  "version": "1.0.0",
  "description": "Backend server for NTFG HRMS",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest --watchAll=false",
    "test:watch": "jest --watchAll",
    "test:coverage": "jest --coverage --watchAll=false",
    "test:ci": "jest --ci --coverage --watchAll=false --reporters=default --reporters=jest-junit",
    "seed": "node utils/seedDatabase.js",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "lint:ci": "eslint . --ext .js --format junit --output-file reports/eslint-report.xml",
    "build": "echo 'Backend build completed'",
    "docker:build": "docker build -t ntfg-hrms-backend .",
    "docker:run": "docker run -p 5000:5000 ntfg-hrms-backend",
    "health": "curl -f http://localhost:5000/api/health || exit 1",
    "migrate": "node scripts/migrate.js",
    "backup": "node scripts/backup.js",
    "security:audit": "npm audit --audit-level=moderate",
    "security:fix": "npm audit fix"
  },
  "dependencies": {
    "express": "^4.18.2",
    "mongoose": "^8.0.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "cloudinary": "^1.41.0",
    "nodemailer": "^6.9.7",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "express-validator": "^7.0.1",
    "socket.io": "^4.7.4",
    "node-cron": "^3.0.3",
    "pdf-parse": "^1.1.1",
    "natural": "^6.7.0",
    "compromise": "^14.10.0",
    "axios": "^1.6.2",
    "@tensorflow/tfjs-node": "^4.15.0",
    "openai": "^4.20.1",
    "compression": "^1.7.4",
    "joi": "^17.9.2",
    "moment": "^2.29.4",
    "lodash": "^4.17.21",
    "@huggingface/inference": "^2.6.1",
    "mammoth": "^1.6.0",
    "winston": "^3.10.0",
    "express-mongo-sanitize": "^2.2.0",
    "xss-clean": "^0.1.4",
    "hpp": "^0.2.3"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "eslint": "^8.47.0",
    "eslint-config-node": "^4.1.0",
    "eslint-plugin-node": "^11.1.0",
    "@types/jest": "^29.5.4",
    "mongodb-memory-server": "^9.1.1"
  },
  "keywords": [
    "hrms",
    "ai",
    "nodejs",
    "mongodb",
    "express",
    "socket.io"
  ],
  "author": "NextTechFusionGadgets",
  "license": "MIT",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/ntfg-hrms.git"
  }
}